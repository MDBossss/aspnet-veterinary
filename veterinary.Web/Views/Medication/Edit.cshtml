@using Veterinary.Model
@model Medication

@{
    ViewData["Title"] = "Edit medication";
}
<h1>@ViewData["Title"]</h1>


<form asp-action="Edit" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    @* Hidden field for ID (assuming ID is not editable) *@
    <input type="hidden" asp-for="ID" />

    <div class="form-group">
        <label asp-for="Name" class="control-label">Name:</label>
        <input asp-for="Name" class="form-control" maxlength="50" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DosageUnit" class="control-label">Dosage Unit:</label>
        <input asp-for="DosageUnit" class="form-control" />
        <span asp-validation-for="DosageUnit" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SideEffect" class="control-label">Side Effects:</label>
        <textarea asp-for="SideEffect" class="form-control"></textarea>
        <span asp-validation-for="SideEffect" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ActiveIngredient" class="control-label">Active Ingredient:</label>
        <input asp-for="ActiveIngredient" class="form-control" />
        <span asp-validation-for="ActiveIngredient" class="text-danger"></span>
    </div>

    <div class="form-group mt-3">
        <input type="submit" value="Save" class="btn btn-primary" />
    </div>
</form>