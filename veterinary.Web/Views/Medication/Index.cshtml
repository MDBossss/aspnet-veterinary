@using Veterinary.Model
@model List<Medication>

@{
    ViewData["Title"] = "Available medication";
}

<h1>@ViewData["Title"]</h1>


<div class="">
    <form class="d-flex gap-1 align-items-end" method="post" asp-controller="Medication" asp-action="Create">
        <partial name="_Create" model="new Medication()"/>
    </form>

    <div class="card p-5 mt-2">
        <table class="table">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Dosage unit</th>
                    <th>Side effect</th>
                    <th>Active ingredient</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach(var m in Model)
                {
                    <tr>
                        <td>@m.ID</td>
                        <td>@m.Name</td>
                        <td>@m.DosageUnit</td>
                        <td>@m.SideEffect</td>
                        <td>@m.ActiveIngredient</td>
                        <th>
                            <a asp-controller="Medication" asp-action="Edit" asp-route-id="@m.ID">
                                <button class="btn btn-secondary btn-sm">
                                    <img src="/images/pencil.svg" class="fill-white" />
                                </button>
                            </a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>
