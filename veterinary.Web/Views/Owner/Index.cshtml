@using Veterinary.Model
@model List<Owner>

@{
    ViewData["Title"] = "Owners";
}

<h1>@ViewData["Title"]</h1>


<div class="">
    <div class="card p-5 mt-2">

        <div class="d-flex gap-1">
            <a asp-controller="Owner" asp-action="Create" class="w-100"><button class="btn btn-primary w-100">Add owner</button></a>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>First Name</th>
                    <th>Last Name</th>
                    <th>Phone Number</th>
                    <th></th>
                </tr>
            </thead>

            <tbody>
                @foreach (var o in Model)
                {
                    <tr>
                        <td>@o.FirstName</td>
                        <td>@o.LastName</td>
                        <td>@o.PhoneNumber</td>
                        <th>
                            <a asp-controller="Owner" asp-action="Edit" asp-route-id="@o.ID">
                                <button class="btn btn-secondary btn-sm">
                                    <img src="/images/pencil.svg" class="fill-white" />
                                </button>
                            </a>

                            <a asp-controller="Owner" asp-action="Delete" asp-route-id="@o.ID">
                                <button class="btn btn-danger btn-sm">
                                    <img src="/images/trash.svg" class="fill-white" />
                                </button>
                            </a>
                        </th>
                    </tr>
                }
            </tbody>
        </table>
    </div>

</div>